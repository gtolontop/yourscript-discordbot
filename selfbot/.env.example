# Discord user account token for selfbot
SELFBOT_TOKEN=

# OpenRouter API key (replaces Gemini)
OPENROUTER_API_KEY=

# Shared secret for Socket.IO /ai authentication (must match bot server)
AI_SECRET=change_me_secret

# Bot server URL for Socket.IO connection
BOT_SERVER_URL=http://localhost:3000

# AI persona name used in conversations
AI_PERSONA_NAME=Lucas

# Response delay in seconds (base, will add random variation)
AI_RESPONSE_DELAY=3

# Daily AI budget in USD (hard stop when exceeded)
AI_DAILY_BUDGET=5

# Discord channel ID for budget alerts
AI_BUDGET_ALERT_CHANNEL=

# Discord channel ID for DM log threads
AI_DM_LOG_CHANNEL=

# OpenRouter site info (sent in headers)
OPENROUTER_SITE_URL=
OPENROUTER_SITE_NAME=
